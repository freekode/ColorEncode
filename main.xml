<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script File="lua/cli.lua"/>
	<Script File="lua/colorlib.lua"/>
	<Script File="lua/main.lua"/>
	<Script File="lua/itemDb.lua"/>
	<Script File="lua/playerstatus.lua"/>
	<Script File="lua/wow.lua"/>
	<Script File="lua/uiframe.lua"/>

	<Frame name="ColorEncodeMainFrame"
		   parent="UIParent"
		   hidden="false"
		   enableMouse="true">

		<Size x="45" y="40"/>
		<!-- <Anchors>
		  <Anchor point="TOPLEFT">
			<Offset x="0" y="0"/>
		  </Anchor>
		</Anchors> -->

		<!-- <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background"
				  edgeFile="Interface\Tooltips\UI-Tooltip-Border"
				  tile="true">
		  <TileSize>
			<AbsValue val="16"/>
		  </TileSize>
		  <EdgeSize>
			<AbsValue val="16"/>
		  </EdgeSize>
		  <BackgroundInsets>
			<AbsInset left="4" right="3" top="4" bottom="3"/>
		  </BackgroundInsets>
		  <Color r="0.2" g="0.2" b="0.2" a="0.7"/>
		</Backdrop> -->

		<Layers>
			<!-- First line: x, y, azimuth, pitch -->
			<Layer level="ARTWORK">
				<Texture name="$parent_xTex">
					<Size x="11" y="11"/>
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK">
				<Texture name="$parent_yTex">
					<Size x="10" y="11"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_xTex"
								relativePoint="TOPRIGHT">
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK">
				<Texture name="$parent_azimuthTex">
					<Size x="11" y="11"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_yTex"
								relativePoint="TOPRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK">
				<Texture name="$parent_pitchTex">
					<Size x="11" y="11"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_azimuthTex"
								relativePoint="TOPRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>

			<!-- Second line: in combat, has target, in range -->
			<Layer level="ARTWORK">
				<Texture name="$parent_isInCombatTex">
					<Size x="11" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_xTex"
								relativePoint="BOTTOMLEFT"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK">
				<Texture name="$parent_hasTargetTex">
					<Size x="10" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_isInCombatTex"
								relativePoint="TOPRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK">
				<Texture name="$parent_isInActionRangeTex">
					<Size x="11" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_hasTargetTex"
								relativePoint="TOPRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>

			<!-- Third line: is herb, is ore -->
			<Layer level="ARTWORK">
				<Texture name="$parent_isHerb">
					<Size x="11" y="11"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_isInCombatTex"
								relativePoint="BOTTOMLEFT"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK">
				<Texture name="$parent_isOre">
					<Color a="1" r="0" g="0" b="0"/>
					<Size x="11" y="11"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_isHerb"
								relativePoint="TOPRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>

			<!-- Fourth line: bag updated -->
			<Layer level="ARTWORK">
				<Texture name="$parent_bagUpdated">
					<Color a="1" r="0" g="0" b="0"/>
					<Size x="11" y="11"/>
					<Anchors>
						<Anchor point="TOPLEFT"
								relativeTo="$parent_isHerb"
								relativePoint="BOTTOMLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>

		<Scripts>
			<OnLoad function="onLoad"/>
			<OnUpdate function="onUpdate"/>
			<OnEvent function="onEvent"/>
			<!-- <OnMouseDown>
			  MainFrame:StartMoving();
			</OnMouseDown>
			<OnMouseUp>
			  MainFrame:StopMovingOrSizing();
			</OnMouseUp> -->
		</Scripts>

	</Frame>
</Ui>
